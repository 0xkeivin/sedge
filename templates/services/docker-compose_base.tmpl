{{/* docker-compose_base.tmpl */}}
{{ define "docker-compose" }}
version: "3.9"

services:
{{template "execution" .}}
{{if .Mev}}
  mevboost:
    image: flashbots/mev-boost:latest
    networks:
      - sedge
    container_name: mev-boost
    restart: on-failure
    entrypoint:
      - /app/mev-boost
      - -addr
      - 0.0.0.0:{{.MevPort}}
      - -${NETWORK}
      - -relay-check
      - -relays
      - ${RELAY_URL}{{end}}
  {{with .CcRemoteCfg}}config_beacon:
    container_name: config_custom_network
    image: busybox:latest
    volumes:
      - ./:/tmp/app
    command: >
      sh -c "wget -O /tmp/app/config.yml ${CONFIG_URL};
      wget -O /tmp/app/genesis.ssz ${GENESIS_URL};
      echo -n ${DEPLOY_BLOCK} > /tmp/app/deploy_block.txt"{{end}}
{{template "consensus" .}}
{{template "validator" .}}

networks:
  sedge:
    name: sedge_network
{{ end }}